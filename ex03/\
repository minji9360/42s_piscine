#include <unistd.h>
#include <stdio.h>

int		compare_str(char *str1, char *str2)
{
	int i;

	i = 0;
	while (str1[i] != '\0' || str2[i] != '\0')
	{
		printf("1 = %c, 2 = %c\n",str1[i], str2[i]);
		if (str1[i] < str2[i])
		{
			return (1);
		}
		else if (str1[i] > str2[i])
			return (-1);
		i++;
	}
	if (str1[i] < str2[i])
		return (1);
	return (0);
}

char	**change_str(int argc, char **argv)
{
	int i;
	int count;
	char *temp;

	count = argc-1;
	i = 0;
	while (count > 0)
	{
		while (i < argc)
		{
			if (compare_str(argv[i], argv[i+1]))
			{
				temp = argv[i];
				argv[i] = argv[i + 1];
				argv[i + 1] = temp;
			}
			i++;
		}
		i = 0;
		count--;
	}
	return (argv);
}


int		main(int argc, char **argv)
{
	int i;
	int size;

	i = 1;
	argv = change_str(argc, **argv);
	while (*argv[i] != '\0')
	{
		size = 0;
		while (argv[i][size] != '\0')
			size++;
		write(1, argv[i], size + 1);
		write(1, "\n", 1);
		i++;
	}
	return (0);
}
